# Twitter API Credentials
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# LLM API Keys (choose one or both)
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Reddit API (for meme scraping)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=MemeBot/1.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/memebot

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Bot Configuration
POST_INTERVAL_HOURS=6
TREND_SCRAPE_INTERVAL_HOURS=1
BOT_ENABLED=true

# Content Generator Mode (set to true to avoid Twitter API costs)
# When true: Bot generates content to review queue, you post manually
# When false: Bot auto-posts to Twitter (requires Twitter API)
CONTENT_GENERATOR_MODE=true
GENERATE_INTERVAL_HOURS=4

# Environment
ENVIRONMENT=development
PORT=8000
